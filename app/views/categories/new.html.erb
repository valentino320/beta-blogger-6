<h1 class="text-center mt-4">Create a new category</h1>

<div class="row justify-content-center mx-0">
  <div class="col-10">
    <%= render 'shared/errors', trgt: @category %>
    <%= form_with(model: @category, class: "shadow rounded p-3 bg-info", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, "Category name" , class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
        </div>
      </div> 
      
      <div class="form-group row">
        <label class="col-2 col-form-label"></label>
        <div  class="col-10">
            <%= f.submit class: "btn btn-outline-light bt-lg btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="py-2 mb-3">
    <%= link_to '[ Cancel Edit and return to articles listing ]', articles_path  %>
  </div>
</div>