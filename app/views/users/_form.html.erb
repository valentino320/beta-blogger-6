<div class="row justify-content-center mx-0">
  <div class="col-10">
    <%= render 'shared/errors', trgt: @user %>
    <%= form_with(model: @user, class: "shadow rounded p-3 bg-info", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
        </div>
      </div> 
      <div class="form-group row"> 
        <%= f.label :email, class: "col-2 col-form-label text-light" %><br>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Your email address" %>
        </div>
      </div>  
      <div class="form-group row"> 
        <%= f.label :password, class: "col-2 col-form-label text-light" %><br>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-2 col-form-label"></label>
        <div  class="col-10">
            <%= f.submit "Sign up", class: "btn btn-outline-light bt-lg btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="py-2 mb-3">
    <%= link_to '[ Cancel Edit and return to articles listing ]', articles_path  %>
  </div>
</div>