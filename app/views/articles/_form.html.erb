<div class="row justify-content-center mx-0">
  <div class="col-10">
    <%= render 'shared/errors', trgt: @article %>
    <%= form_with(model: @article, class: "shadow rounded p-3 bg-info", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of Article" %>
        </div>
      </div> 
      <div class="form-group row"> 
        <%= f.label :description, class: "col-2 col-form-label text-light" %><br>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of Article" %>
        </div>
      </div>  
      <div class="form-group row"> 
        <%= f.label :info, class: "col-2 col-form-label text-light" %>
        <div  class="col-10">
          <%= f.text_field :info, class: "form-control", placeholder: "Info" %>
        </div>
      </div>
      <div class="form-group row"> 
        <%= f.label :category, class: "col-2 col-form-label text-light" %>
        <div  class="col-10">
          <%= f.collection_select(:category_ids, Category.all, :id, :name,
          { prompt: "Make your selection from the list below (can be empty)" } ,
          { multiple: true, size: 4, class: "custom-select" }) %>
        </div>
      </div>


      <div class="form-group row">
        <label class="col-2 col-form-label"></label>
        <div  class="col-10">
            <%= f.submit class: "btn btn-outline-light bt-lg btn-block" %>
        </div>
      </div>
      
    <% end %>
    </div>
    <div class="py-2 mb-3">
      <%= link_to '[ Cancel Edit and return to articles listing ]', articles_path  %>
    </div>
</div>