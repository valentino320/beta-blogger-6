<h1 class="text-center pt-3">Listing All Articles</h1>

<div class="container page-content">
<% @articles.each do |article| %>
  <div class="row justify-content-center">
    <div class="col-8 mt-2">
      <div class="card text-center shadow rounded">
        <div class="card-header font-italic">
          by <%= article.user.username %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
          <p class="card-text"><%= truncate(article.description, length: 128) %></p>
          <%= link_to 'Show', article_path(article), class: "btn btn-outline-success" %>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info" %>
          <%= link_to 'Delete', article_path(article), class:"btn btn-outline-danger", method: :delete, data: { confirm: "Are You Sure?" } %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago, </small>
          <small> Edited <%= time_ago_in_words(article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>