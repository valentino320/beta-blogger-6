<div class="container page-content">
<% @articles.each do |article| %>
  <div class="row justify-content-center">
    <div class="col-8 mt-2">
      <div class="card text-center shadow rounded">
        <div class="card-header font-italic">
          <% if article.user  %>
            by <%= link_to article.user.username, user_path(article.user) %>
          <% end %>
          <% if article.categories.any? %>
            <div class="mt-2">
              <%= render article.categories %>
            </div>
          <% end %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
          <p class="card-text"><%= truncate(article.description, length: 128) %></p>
          <%= link_to 'Show', article_path(article), class: "btn btn-outline-success" %>
          <% if logged_in? && (article.user == current_user || current_user.admin?) %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info" %>
            <%= link_to 'Delete', article_path(article), class:"btn btn-outline-danger", method: :delete, data: { confirm: "Are You Sure?" } %>
          <% end  %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago, </small>
          <small> Edited <%= time_ago_in_words(article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>